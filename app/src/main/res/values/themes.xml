<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="Theme.Hymnal" parent="BaseTheme" >
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="Theme.Hymnal.Launcher">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/window_background</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

</resources>
